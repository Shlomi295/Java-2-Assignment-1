    public DVDEditFrame(DVDCollectionGUI inParent, DVD inDVD)
    {
        parent = inParent;
        currentDVD = inDVD;
        initComponents();
        txtEditID.setText(currentDVD.getID()+""); 
        txtEditTitle.setText(currentDVD.getTitle());
        txtEditYear.setText(currentDVD.getYear());
        if (currentDVD.isFavourite() == checkEditFavorite.isSelected())
            checkEditFavorite.setSelected(false);
        else
            checkEditFavorite.setSelected(true);
                
        setVisible(true);
    }

